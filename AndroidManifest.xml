<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.metrans"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.metrans.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.metrans.RequestWarehouse"
            android:label="@string/title_activity_request_warehouse" >
        </activity>
        <activity
            android:name="com.metrans.RequestProducts"
            android:label="@string/title_activity_request_products" >
        </activity>
        <activity
            android:name="com.metrans.About"
            android:label="@string/title_activity_about" >
        </activity>
        <activity
            android:name="com.metrans.Help"
            android:label="@string/title_activity_help" >
        </activity>
        <activity
            android:name="com.metrans.Result"
            android:label="@string/title_activity_result" >
        </activity>  
    </application>
     <uses-permission android:name="android.permission.VIBRATE" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
</manifest>
